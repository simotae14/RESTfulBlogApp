<% include ./partials/header %>
<div class="ui main text container segment">
  <div class="ui huge header">Modifica <%= blog.titolo %></div>
  <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
    <div class="field">
      <label>Titolo</label>
      <input type="text" name="blog[titolo]" value="<%= blog.titolo %>" placeholder="titolo">
    </div>
    <div class="field">
      <label>Immagine</label>
      <input type="text" name="blog[immagine]" value="<%= blog.immagine %>" placeholder="immagine">
    </div>
    <div class="field">
      <label>Contenuto del Post</label>
      <textarea name="blog[corpo]"><%= blog.corpo %></textarea>
    </div>
    <input class="ui violet big basic button" type="submit" value="Invia">
  </form>
</div>

<% include ./partials/footer %>